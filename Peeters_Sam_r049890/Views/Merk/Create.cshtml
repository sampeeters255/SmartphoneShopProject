@model Peeters_Sam_r049890.ViewModels.CreateMerkViewModel

@{
  ViewData["Title"] = "Merk toevoegen";
}

<div class="row text">
  <div class="col-md-8 offset-2">
    <p>
      <h1>Voeg een merk toe</h1>
    </p>
    <div class="row">
      <div class="col-md-8 offset-2">
        <form asp-action="Create" method="post">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
            <label asp-for="Merknaam" class="control-label"></label>
            <input asp-for="Merknaam" class="form-control" />
            <span asp-validation-for="Merknaam" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Herkomst" class="control-label"></label>
            <input asp-for="Herkomst" class="form-control" />
            <span asp-validation-for="Herkomst" class="text-danger"></span>
          </div>
          <div class="form-group">
            <input type="submit" name="name" value="Create" class="btn btn-outline-primary float-right" />
            <a class="btn btn-outline-secondary" asp-action="Index">Terug naar lijst</a>
          </div>
        </form>
        
      </div>
    </div>
  </div>
</div>
