@model IEnumerable<Merk>

@{
  ViewData["Title"] = "lijst met klanten";
}
<div class="row">
  <div class="col-md-8 offset-md-2">
    <table class="table">
      <thead>
        <tr>
          <th>@Html.DisplayNameFor(m => m.Merknaam)</th>
          <th>@Html.DisplayNameFor(m => m.Herkomst)</th>
          <a class="btn btn-outline-success" asp-action="Create" >Add merk</a>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td class="aling-middle">
              @Html.DisplayFor(modelItem => item.Merknaam)
            </td>
            <td class="aling-middle">
              @Html.DisplayFor(modelItem => item.Herkomst)
            </td>
            

            <td class="aling-middle">
              <a class="btn btn-outline-primary"asp-action="Edit" asp-route-id="@item.MerkId">Edit</a> |              
              <a class="btn btn-outline-danger" asp-controller="Merk" asp-action="Delete" asp-route-id="@item.MerkId">Delete</a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
