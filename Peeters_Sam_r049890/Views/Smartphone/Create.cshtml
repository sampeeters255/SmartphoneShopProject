@model Smartphone

@{
    ViewData["Title"] = "Smartphone toevoegen";
}

<div class="row text">
  <div class="col-md-8 offset-2">
    <p>
      <h1>Voeg smartphone toe</h1>
    </p>
    <div class="row">
      <div class="col-md-8 offset-2">
        <form asp-action="Create" method="post">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
        <div class="form-group">
          <label asp-for="Model" class="control-label"></label>
          <input asp-for="Model" class="form-control" />
          <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Prijs" class="control-label"></label>
          <input asp-for="Prijs" class="form-control" />
          <span asp-validation-for="Prijs" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" name="name" value="Create" class="btn btn-outline-primary float-right" />
          <a class="btn btn-outline-secondary" asp-action="Index" >Terug naar lijst</a>
        </div>
      </div>
    </div>
  </div>
</div>
