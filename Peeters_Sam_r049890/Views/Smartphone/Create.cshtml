@model Peeters_Sam_r049890.ViewModels.CreateSmartphoneViewModel;

@{
  ViewData["Title"] = "Smartphone toevoegen";
}

<div class="row text">
  <div class="col-md-8 offset-2">
    <p>
      <h1>Voeg smartphone toe</h1>
    </p>
    <div class="row">
      <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
            <label asp-for="Merk" class="control-label"></label>
            <input asp-for="Merk" class="form-control" />
            <span asp-validation-for="Merk" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Model" class="control-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="Prijs" class="control-label"></label>
            <input asp-for="Prijs" class="form-control" />
            <span asp-validation-for="Prijs" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" accept="image/*/" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="AangemaaktDatum" class="control-label"></label>
            <input asp-for="AangemaaktDatum" class="form-control" />
            <span asp-validation-for="AangemaaktDatum" class="text-danger"></span>
          </div>
          <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-outline-secondary" asp-action="Index">Terug naar lijst</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
